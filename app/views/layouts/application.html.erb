<!DOCTYPE html>
<html>
<head>
  <title>Luncheon</title>
  <%= stylesheet_link_tag "application", params[:controller], :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= yield %>

  <div id="fb-root"></div>
  <script>
    //some global vars
    var fb_app_id = '<%= ENV['FB_APP_ID'] %>';

    //asynch loads
    (function() {
      var e = document.createElement('script');
      e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
      e.async = true;
      document.getElementById('fb-root').appendChild(e);
    }());
  </script>
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js",
        "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js",
        "//cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js",
        "//app.eventsourcehq.com/es.js",
        "application",
         params[:controller] 
  %>
</body>
</html>
