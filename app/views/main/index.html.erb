<h1>Agency Lunch</h1>
<a class="login_btn">connect to app</a>
<a target="_blank" href="/lunch_extension.zip" class="chrome hide">want instant notifications with chrome?</a>
<div id="lunches">
  <%= form_for(@lunch) do |f| %>
    <%= f.text_field :place, :placeholder => 'New Place' %>
    <div class="center datetime">
    <%= f.datetime_select :start_time, :discard_year => true, :ampm => true, :default => Time.zone.now, :datetime_separator => '<div class="clr"></div>', :use_month_numbers => true, :date_separator => '<div class="left">/</div>', :time_separator => '<div class="left">:</div>' %>
    </div>
    <%= f.submit :value => '+' %>
  <% end %>
</div>